@using Model;
@model Abonado

@{
    ViewBag.Title = "Cotizar abono";
    var result = (string)ViewBag.Result;
}

<link href="@Url.Content("~/Content/List.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/index.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/cotizar.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/cotizar.js")"></script>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cotizar abono</title>
</head>

<div class="container">
    <div class="title">Cotizar un abono mensual</div>
</div>

@using (Ajax.BeginForm("Cotizar", null, new AjaxOptions { HttpMethod = "POST" }, new { id = "form", @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="form-group row">
            <div class="col-sm-4">
                @Html.Label("Nombre ó Empresa")
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-sm-4">
                        @Html.Label("Teléfono")
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Phone)
                    </div>
                    <div class="col-sm-4">
                        @Html.Label("Email")
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4">
                @Html.Label("Dirección")
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Address)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-sm-2">
                        @Html.Label("N° Pc")
                        @Html.TextBox("pcs", null, new { @class = "form-control num-input" })
                    </div>
                    <div class="col-sm-2">
                        @Html.Label("N° Notebooks")
                        @Html.TextBox("notebooks", null, new { @class = "form-control num-input" })
                    </div>
                    <div class="col-sm-2">
                        @Html.Label("N° Servidores")
                        @Html.TextBox("servers", null, new { @class = "form-control num-input" })
                    </div>
                    <div class="col-sm-2">
                        @Html.Label("N° Impresoras", new { @class = "networkText" })
                        @Html.TextBox("printers", null, new { @class = "form-control num-input" })
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4 network">
                @Html.CheckBox("network", false, new { @class = "form-control" })
                @Html.Label("Los equipos estan en red")
            </div>
        </div>

        <div class="cobertura">Presione Enviar Solicitud y recibirá la cotización por mail</div>

        <input type="button" id="volver" value="Volver" class="btn btn-secondary float-right" />
        <input type="submit" value="Enviar Solicitud" class="btn btn-primary float-right" />
    </fieldset>
}

@Html.Hidden("result", result, new { id = "result"})
<div id="dialog-confirm" title="Solicitud">
    <p>La solicitud se envío con éxito</p>
</div>


