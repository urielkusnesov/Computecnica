@using Model;
@model Service

@{
    ViewBag.Title = "Servicio Técnico Particular";
    var result = (string)ViewBag.Result;
}

<link href="@Url.Content("~/Content/List.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/index.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/cotizar.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/cotizar.js")"></script>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Servicio Técnico Particular</title>
</head>

<div class="container">
    <div class="title">Solicitar Servicio Técnico Particular</div>
</div>

@using (Ajax.BeginForm("Particular", null, new AjaxOptions { HttpMethod = "POST" }, new { id = "form", @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="form-group row">
            <div class="col-sm-4">
                @Html.Label("Nombre ó Empresa")
                @Html.TextBoxFor(m => m.Abonado.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Abonado.Name)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-sm-4">
                        @Html.Label("Teléfono")
                        @Html.TextBoxFor(m => m.Abonado.Phone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Abonado.Phone)
                    </div>
                    <div class="col-sm-4">
                        @Html.Label("Email")
                        @Html.TextBoxFor(m => m.Abonado.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Abonado.Email)
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4">
                @Html.Label("Detalle su problema")
                @Html.TextAreaFor(m => m.Issue, new { @class = "form-control" })
            </div>
        </div>

        <div class="cobertura">Presione Enviar Solicitud y será contactado a la brevedad</div>

        <input type="button" id="volver" value="Volver" class="btn btn-secondary float-right" />
        <input type="button" id="send" value="Enviar Solicitud" class="btn btn-primary float-right" />
    </fieldset>
}

@Html.Hidden("result", result, new { id = "result" })
<div id="dialog-confirm" title="Solicitud">
    <p>La solicitud se envío con éxito</p>
</div>
<div id="dialog-sure" title="Solicitud">
    <p>Desea enviar la solicitud?</p>
</div>

